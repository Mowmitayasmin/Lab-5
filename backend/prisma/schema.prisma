// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}


model User {
  id        String      @id 
  name      String
}
model Department {
  id        Int     @id @default(autoincrement())
  department String
  employees Json
  userId      String?
}

model Role {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  userId      String?
}
