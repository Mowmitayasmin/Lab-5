{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@prisma"],
    // "typeRoots": ["./node_modules/@types", "./node_modules/@prisma"],
    "outDir": "./dist",
    "rootDir": "./src" // Helps preserve folder structure in dist/
  },

  "include": ["src/**/*", "config"],
  "exclude": ["node_modules", "prisma", "dist"]
}
